pipeline{
    agent any
    stages{
        stage("build"){
            steps{
                sh 'pwd'
                sh 'ls -la'
                dir('api') {
                    sh 'docker build -t api-app-image .'
                    sh 'docker rm -f api-app'
                    sh 'docker run -d --name api-app -p 5000:5000 api-app-image'
                }
            }
            post{
                always{
                    sh "rm -f Dockerfile "
                }
                success{
                    echo "well done"
                }
                failure{
                    echo "ooooops"
                }
            }
        }
        stage("test"){
            steps{
                sh 'docker ps'
                }
            }
    }
    post{
        always{
            sh 'echo hello'
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}